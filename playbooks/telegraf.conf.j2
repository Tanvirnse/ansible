[global_tags]
  dc = "my_ansi_1"
  rack = "rack-1"

[agent]
  interval = "10s"
  round_interval = true
  metric_batch_size = 1000
  metric_buffer_limit = 10000
  collection_jitter = "0s"
  flush_interval = "10s"
  flush_jitter = "0s"
  precision = ""
  debug = false
  quiet = false
  logfile = ""
  hostname = "{{ ansible_hostname }}"
  omit_hostname = false

[[outputs.influxdb]]
  urls = ["http://localhost:{{ influxdb_http_port }}"]
  database = "{{ influxdb_database }}"
  retention_policy = "{{ influxdb_retention_policy }}"
  timeout = "5s"
  username = "{{ influxdb_admin_user }}"
  password = "{{ influxdb_admin_password }}"

[[inputs.cpu]]
  percpu = true
  totalcpu = true
  collect_cpu_time = false
  report_active = false

[[inputs.disk]]
  ignore_fs = ["tmpfs", "devtmpfs", "devfs"]
  
[[inputs.diskio]]

[[inputs.kernel]]
  
[[inputs.mem]]

[[inputs.processes]]

[[inputs.swap]]

[[inputs.system]]
